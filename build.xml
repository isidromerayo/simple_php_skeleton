        <parallel threadCount="2">
            <sequential>
                <antcall target="pdepend"/>
                <antcall target="phpmd"/>
            </sequential>
            <antcall target="phpcpd"/>
            <antcall target="phpcs"/>
            <antcall target="phpdoc"/>
            <antcall target="phploc"/>
        </parallel>
    </target>
    <target description="Generate jdepend.xml and software metrics charts using PHP_Depend" name="pdepend">
        <exec executable="pdepend">
            <arg line="--jdepend-xml=${basedir}/build/logs/jdepend.xml               --jdepend-chart=${basedir}/build/pdepend/dependencies.svg               --overview-pyramid=${basedir}/build/pdepend/overview-pyramid.svg               ${source}"/>
        </exec>
    </target>
    <target description="Generate pmd.xml using PHPMD" name="phpmd">
        <exec executable="phpmd">
            <arg line="${source}               xml               codesize,design,naming,unusedcode               --reportfile ${basedir}/build/logs/pmd.xml"/>
        </exec>
    </target>
    <target description="Generate pmd-cpd.xml using PHPCPD" name="phpcpd">
        <exec executable="phpcpd">
            <arg line="--log-pmd ${basedir}/build/logs/pmd-cpd.xml ${source}"/>
        </exec>
    </target>
    <target description="Generate phploc.csv" name="phploc">
        <exec executable="phploc">
            <arg line="--log-csv ${basedir}/build/logs/phploc.csv ${source}"/>
        </exec>
    </target>
    <target description="Generate checkstyle.xml using PHP_CodeSniffer" name="phpcs">
        <exec executable="phpcs" output="/dev/null">
            <arg line="--report=checkstyle               --report-file=${basedir}/build/logs/checkstyle.xml               --standard=PEAR               ${source}"/>
        </exec>
    </target>
    <target description="Generate API documentation using PHPDocumentor" name="phpdoc">
        <exec executable="phpdoc">
            <arg line="-d ${source} -t ${basedir}/build/api"/>
        </exec>
    </target>
    <target description="Aggregate tool output with PHP_CodeBrowser" name="phpcb">
        <exec executable="phpcb">
            <arg line="--log    ${basedir}/build/logs               --source ${source}               --output ${basedir}/build/code-browser"/>
        </exec>
