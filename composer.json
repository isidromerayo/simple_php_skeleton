{
    "name": "isidromerayo/simple_php_skeleton",
    "description": "Simple skeleton PHP project with Symfony2 components",
    "keywords": ["test", "composer", "Helper", "TDD", "PHPUnit", "Test Doubles", "Mock", "Stub", "xUnit"],
    "homepage": "",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Isidro Merayo Castellano",
            "homepage": "https://bitbucket.org/isidromerayo"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "pimple/pimple": "1.*",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.x-dev",
        "mockery/mockery": "dev-master",
        "phpunit/DbUnit": "1.2.*",
        "ext-sqlite3": "*",
        "sensiolabs/security-checker": "dev-master"
    },
    "suggest": {
        "ext/xdebug": "Debugger and profiling"
    },
    "autoload": {
        "psr-0": {
            "": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": ["echo [NOTICE] Deleting all .git dirs inside project", "rm -rf .git"]
    },
    "config": {
        "bin-dir": "bin"
    }
}
